                    },
                    "data": {
                        "grant_type": "client_credentials",
                        "client_id": "lq8oe9WnaxpCE4XDAPUSmtSpLvTSFVUX67VKtQOsYNNJcLW55n",
                        "client_secret": "3B1mNzf5xkBUzhTOgRgmqZfbqwK64jG7rgQDIy32"
                    }
                };
    
                $.ajax(settings).done(function (response) {
                    token = response.access_token;
                    // getDogsData(page_count)
                    getCatsData(page_count2)
                });
            }

            
            function getCatsData(pageNo) {
                var settings = {
                    "url": "https://api.petfinder.com/v2/animals?type=cat&page=1",
                    "method": "GET",
                    "timeout": 0,
                    "headers": {
                        "Authorization": "Bearer " + token
                    },
                };
    
                $.ajax(settings).done(function (response) {
                    console.log(response);
                    response.animals.forEach(element => {
    
                        var row = $("<tr>").append(`
                <td>${element.photos.length > 0 ? `<img src=${element.photos[0].small} />` : ""}</td>
             <td>${element.gender}</td>
             <td>${element.age}</td>
             <td>${element.size}</td>
             <td>email: <a href="mailto:${element.contact.email}">${element.contact.email}</a><br/>
                 phone number: ${element.contact.phone}<br/>
                 state: ${element.contact.address.state}
             </td>
             <td>${element.breeds.primary}</td>
             <td>declawed: ${element.attributes.declawed} <br/>
                 house_trained: ${element.attributes.house_trained} <br/>
                 shots_current: ${element.attributes.shots_current} <br/>
                 spayed_neutered: ${element.attributes.spayed_neutered} <br/>
                 special_needs: ${element.attributes.spayed_neutered}
                
                </td>
                `)
                        data_table2.row.add(row).draw();
    
                    });
                    if (response.pagination.count_per_page > page_count2 && page_count2 != 10) {
                        page_count2++;
                        getCatsData(page_count2)
                    }
                }).fail(function (error) {
